@model IEnumerable<WinesBackend.Models.Wine>

@{
    ViewBag.Title = "Wines";
}

<h2>Wines</h2>

<p>
    @Html.ActionLink("Create New", "Create",new{}, new{@class="btn btn-success"})
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Variety)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tasting)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pairing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Image))
            {
                <img src="@Url.Content(item.Image)" alt="Image" style="width: 103px; height: 400px; max-width: 100%;height: auto"/>
            }
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Variety)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tasting)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pairing)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WineId }, new { @class = "btn btn-info" }) 
            
        </td>        
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.WineId }, new { @class = "btn btn-primary" })
            
        </td>       
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.WineId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
